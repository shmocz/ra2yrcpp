---
# We'll use defaults from the LLVM style, but with 4 columns indentation.
BasedOnStyle: Google
---
Language: Cpp
# Force pointers to the type for C++.
DerivePointerAlignment: false
PointerAlignment: Left
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"protocol/protocol.hpp' # must be included before windows includes!
    Priority: 1
  - Regex: '^".+'
    Priority: 2
  - Regex: "^<(fmt|xbyak|argparse)/.+"
    Priority: 3
  - Regex: "<c(stdio|stdint|string)>"
    Priority: 4
  - Regex: "<.+>"
    Priority: 5
