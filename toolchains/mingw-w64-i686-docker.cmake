set(CMAKE_SYSTEM_NAME Windows)
set(HOST_ARCH i686)
set(TOOLCHAIN_PREFIX i686-w64-mingw32)
set(GCC_VERSION 12)
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_SYSROOT /usr/${TOOLCHAIN_PREFIX})
set(INCLUDE_CXX, /usr/lib/gcc/${TOOLCHAIN_PREFIX}/${GCC_VERSION}-posix/include/c++)
set(CMAKE_C_COMPILER ${TOOLCHAIN_PREFIX}-gcc)
set(CMAKE_CXX_COMPILER ${TOOLCHAIN_PREFIX}-g++-posix)

set(CMAKE_FIND_ROOT_PATH ${INCLUDE_CXX})
set(CMAKE_CXX_IMPLICIT_INCLUDE_DIRECTORIES /usr/lib/gcc/${TOOLCHAIN_PREFIX}/${GCC_VERSION}-posix/include)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM BOTH)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY BOTH)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE BOTH)
